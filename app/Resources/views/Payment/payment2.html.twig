{% extends 'auth/show2.html.twig' %}

     {% block body2 %}
     {{ parent() }}
     {% endblock %}

     {% block body3 %}

         <!-- Breadcomb area Start-->
         <h2 class="h3 mb-2 text-gray-800"></h2>

         <!-- Breadcomb area End-->

         <!-- DataTables Example -->
         <div class="card shadow mb-4">
             <div class="card-header py-3">
                 <h6 class="m-0 font-weight-bold text-primary">Liste Des Paiements</h6>
             </div>
             <div class="card-body">


                 <!-- Topbar Search -->
                 <form method="post" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                     <div class="input-group">
                         <input type="datetime" name="date" class="form-control bg-light border-0 small"  aria-label="Search" >
                         <div class="input-group-append">
                             <button class="btn btn-primary" type="submit">
                                 <i class="fas fa-search fa-sm"></i>
                             </button>
                         </div>
                     </div>
                 </form>


                 <!-- Topbar Navbar -->
                 <p><div class="table-responsive">
                     <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                         <thead>
                         <tr>
                             <th>Date Payment</th>
                             <th>Photo Candidat</th>
                             <th>Nom Candidat</th>
                             <th>Mantant</th>

                         </tr>
                         {% for Pay in Payment %}
                         <tr> <td style="color: green; font-style: normal;">{{ Pay.date.date|date("d-m-Y")}}</td>
                             <td><img src="{{ asset('images/' ~ Pay.candidat.file) }}" style=" border-radius: 50%; width: 60px;high:50px;"></td>
                             <td>{{ Pay.candidat.nom}}</td>
                             <td style="color: red; font-style: normal;">{{ Pay.mantant}} </td>

                         </thead>
                         {% endfor %}
                         </tbody>
                     </table>

                 </div>
             </div>
         </div></p>


         <!-- /.container-fluid -->



     {% endblock %}





